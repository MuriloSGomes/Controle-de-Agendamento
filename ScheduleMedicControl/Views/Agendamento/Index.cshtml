@model IEnumerable<ScheduleMedicControl.Business.Models.Agendamento>

@{
    ViewBag.Title = "Index";
}

<h2>Agendamentos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SituacaoAgendamento.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clinica.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Data)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SituacaoAgendamento.Descricao)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Cliente.Nome)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Clinica.Nome)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
